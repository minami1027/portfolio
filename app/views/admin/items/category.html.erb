<div class="row background-category <%= @category %>">
    <div class="col-md-2">
        <%= render 'layouts/category', roll: 'admin'%>
    </div>

    <div class="col-md-10">
    <h1><%= Category.find(params[:category_id])[:category_name] %>'ベース一覧</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8">
    <% @category_items.each do |category_item| %>

        <% if category_item.listing_stop != "stop"%>

        <!-- デバッグ用 -->
        <%#= category_item.attributes %>
        <div class="row"></div>
            <div class="col-md-4">
                <%= attachment_image_tag category_item, :cocktail_image, fallback: "no_image.png", size:'200x250'  %> <br>
                <p class="category-font"><%= category_item.cocktail_name%></p>
                <p class="category-font2"><%= link_to "レシピを見る", admin_item_path(category_item.id) %></p>
            </div>
        </div>
       <% end %>
    <% end %>
    </div>
    <%= paginate @category %>
</div>