<h1>ユーザー編集</h1>
<%= form_for(@user, url: admin_end_user_path(@user)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

 <h4>プロフィール画像</h4>
 <div class="form-group has-icon">
    <div class="user-edit-image">
        <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
    </div>
    <label class="control-label sr-only" for="user_profile_image">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
</div>

    <div class="field">
    <b><%= f.label :ニックネーム %><br /></b>
    <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>

  <div class="field">
    <b><%= f.label :Eメール %><br /></b>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <%= f.submit 'update user' %>

<% end %>