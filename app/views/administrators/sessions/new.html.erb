  <div class="form-wrapper">
<h2>管理用ログインフォーム</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-item">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
  </div>

  <div class="form-item">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder:"パスワード(6文字以上)" %>
  </div>

  <div class="button-panel">
    <%= f.submit "ログイン", class: "button" %>
  </div>
<% end %>
