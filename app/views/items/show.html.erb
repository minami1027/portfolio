<div class="container">
    <div class="row">

        <div class="col-lg-6">
            <%= attachment_image_tag @item, :cocktail_image, fallback: "no_image.jpg", size:'450x450'  %>
        </div>

        <div class="col-lg-6">
            <h2>カクテル名:<%= @item.cocktail_name %></h2>
            <h2>度数:<%= @item.alcohol_content %></h2>
            <h2>味:<%= @item.cocktail_name %></h2>
            <h2>色:<%= @item.cocktail_color %></h2>
            <h2>製法:<%= @item.manufacturing_method %></h2>
            <div class="col-md-8" id="iine_count">
                <h2><%= @item.favorites.count %> いいね</h2>
            </div>
            <div id="iine-<%= @item.id %>">
                <% #if user_signed_in? %>
                <% if current_user.iine?(@item) %>
                    <%= render 'favorites/unfavorites', item: @item %>
                <% else %>
                    <%= render 'favorites/favorites', item: @item %>
                <% end %>
            <%# end %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2"></div>
            <p><%= link_to "レビューする", new_review_path << "?item_id=#{@item.id}", class:"category-link" %></p><br>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5">
            <h3>材料</h3>
                <table class="table fix-table">
                    <% @item.materials.each do |material| %>
                        <tr>
                            <td class="admin-item-show-td">
                            <td><%= material.material %></td>
                        </tr>
                    <% end %>
                </table>
        </div>

        <div class="col-md-5">
            <h3>作り方</h3>
                <table class="table fix-table">
                    <% @item.howtomakes.each do |howtomake| %>
                        <tr>
                            <td class="admin-item-show-td">
                            <td><%= howtomake.howtomake %></td>
                        </tr>
                    <% end %>
                </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">
            <h3>カクテル説明</h3>
                <table class="table fix-table">
                <%= @item.cocktail_introduction %></h4>
                </table>
        </div>
    </div>
</div>

