<div class="container wrap">
    <div class="row">
        <div class="col-md-6 mt-5">
            <%= attachment_image_tag @item, :cocktail_image, fallback: "no_image.png", size:'450x450'  %>
        </div>

        <div class="col-md-6 mt-5">
            <h3>カクテル名:<%= @item.cocktail_name %></h3><br>
            <h3>度数:<%= @item.alcohol_content %></h3><br>
            <h3>味:<%= @item.cocktail_name %></h3><br>
            <h3>色:<%= @item.cocktail_color %></h3><br>
            <h3>製法:<%= @item.manufacturing_method %></h3><br>
            <div class="col-md-5" id="iine_count">
                <h3><%= @item.favorites.count %> いいね</h3>
            </div>
            <div id="iine-<%= @item.id %>">
                <% if user_signed_in? %>
                <div>
                    <% if current_user && current_user.iine?(@item) %>
                        <%= render 'favorites/unfavorites', item: @item %>
                    <% else %>
                        <%= render 'favorites/favorites', item: @item %>
                    <% end %>
                </div>
            <% end %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <h3><%= link_to "レビューする", new_review_path << "?item_id=#{@item.id}", class:"btn btn-primary" %></h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5">
            <h3>材料</h3>
                <table class="table fix-table">
                    <% @item.materials.each do |material| %>
                        <tr>
                            <td class="admin-item-show-td">
                            <td><%= material.material %></td>
                        </tr>
                    <% end %>
                </table>
        </div>

        <div class="col-md-5">
            <h3>作り方</h3>
                <table class="table fix-table">
                    <% @item.howtomakes.each do |howtomake| %>
                        <tr>
                            <td class="admin-item-show-td">
                            <td><%= howtomake.howtomake %></td>
                        </tr>
                    <% end %>
                </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">
            <h3>カクテル説明</h3>
                <table class="table fix-table">
                <%= @item.cocktail_introduction %></h4>
                </table>
        </div>
    </div>
</div>

