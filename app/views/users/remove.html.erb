<div class="notice">
	<h1>退会しますか？</h1>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-6">
			<div class="remove">
				<%= link_to "退会する", unsubscribe_users_path(@user), method: :patch, class:'btn btn-danger' %>
			</div>
		</div>

        <div class="col-md-6">
			<div class="stop">
				<%= link_to "やっぱりやめる", user_path(current_user.id), class:'btn btn-primary' %>
			</div>
		</div>
	</div>
</div>