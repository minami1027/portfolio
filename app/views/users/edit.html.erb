<div class="form-wrapper">
  <h1>マイページ編集</h1>
<%= form_for(@user) do |f| %>
 <h4>プロフィール画像</h4>
 <div class="form-group has-icon">
    <div class="user-edit-image">
        <%= attachment_image_tag @user, :profile_image,size: "250x300", class: "img-circle pull-left profile-thumb", fallback: "no_image.png"%>
    </div>
    <label class="control-label sr-only" for="user_profile_image">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
</div>

  <div class="form-item">
    <h4>ニックネーム<%= f.text_field :user_name %></h4>
  <h4>メールアドレス  <%= f.text_field :email %></h4>
  </div>

    <div class="form-item">
  <%= f.label :生年月日 %>
  <%= raw sprintf(
      f.date_select(
        :birth_date,
        use_month_numbers: true,
        start_year: 1930,
        end_year: (Time.now.year - 18),
        default: Date.new(1989, 1, 1),
        date_separator: '%s'),
        '年 ', '月 ') + '日' %>

</div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-detail" %>
  </div>

  <div class="field">
    <%= f.label :確認用パスワード %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-detail" %>
  </div>

  <div class="form-item">
    <%= f.label :introduction, "自己紹介文" %>
    <%= f.text_field :introduction, class:"自己紹介" %>
  </div>

  <div class="button-panel">
  <%= f.submit '更新する', class: "button" %>
  </div>

<% end %>