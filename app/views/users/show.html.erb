<div class="container" style="padding-bottom: 20px;">
  <div class="row">
   <div class="profile-image">
     <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, class: "img-circle profile-thumb", fallback: "no_image.jpg", size:'200x200'%>
   </div>
  </div>
</div>

 <div class="row">
  <div class="col-xs-6">
   <table>
     <thead>
      <div class="container">

        <div class="profile-name">
        <h3 class="prof-n-kan">ニックネーム</h3>
          <%= @user.user_name %>
        </div>

        <div class="profile-email">
          <h3 class="prof-email">メールアドレス</h3>
          <%= @user.email %>
        </div>

      　<div class="form-group">
            <h3 class="prof-introduction">自己紹介文</h3>
          <%= @user.introduction %>
      　</div>
     </thead>
    </table>
  </div>
</div>

  <div class="col-xs-6">
     <table>
      <thead>
    <div class="prof-fav">
    	<%= link_to "いいね一覧", favorites_path ,:style=>"color:black;"%>
    </div>
    <div class="prof-edit">
    	<%= link_to "マイページ編集", edit_user_path ,:style=>"color:black;"%>
    </div>
    <div class="prof-remove">
    	<%= link_to "退会する",  user_remove_path ,:style=>"color:black;"%>
    </div>
  </div>